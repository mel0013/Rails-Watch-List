<div class="jumbotron">
  <h1 class="display-4"><%= @list.name %></h1>
  <hr class="my-4">
  <p>Bookmark movies into your <%= @list.name %> playlist and leave a review.</p>
  <%= link_to '➕ Movie bookmark', new_list_bookmark_path(@list), class: "btn btn-light btn-lg" %>
</div>


<div class="container flex">
 <% @list.bookmarks.each do |bookmark| %>
<div class="card" style="width: 20rem; height: 20rem;">
  <div class="card-body text-center">
    <h3 class="card-title"><%= bookmark.movie.title %></h3>
    <h6 class="card-subtitle mb-2 text-muted"><strong>Rating: <%= bookmark.movie.rating %></strong></h6>
    <p class="card-text"><%= bookmark.movie.overview %></p>
    <em>"<%= bookmark.comment %>"</em>
  </div>
</div>
 <% end %>
</div>

<div class="home">
  <%= link_to 'Return 🏠', lists_path, class: "btn btn-info" %>
</div>
